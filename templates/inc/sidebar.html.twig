<script>
    document.getElementById('toggleArrow').addEventListener('click', function() {
        var paramContainer = document.querySelector('.paramcontainer');
        var toggleArrow = document.getElementById('toggleArrow');
        var toggleArrowReduced = document.getElementById('toggleArrowReduced');

        if (paramContainer.classList.contains('reduced')) {
            paramContainer.classList.remove('reduced');
            toggleArrow.style.display = 'block';
            toggleArrowReduced.style.display = 'none';
        } else {
            paramContainer.classList.add('reduced');
            toggleArrow.style.display = 'none';
            toggleArrowReduced.style.display = 'block';
        }
    });

    document.getElementById('toggleArrowReduced').addEventListener('click', function() {
